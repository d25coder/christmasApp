<%- include('../partials/header') %>

<main class="main" id="main">
    <div class="container">
        <h2>Streaming Platform</h2>
        <div class="row row-cols-1 row-cols-md-3 g-4">
            <% data.forEach(item => { %>
                <div class="col">
                    <!-- build card in here... -->
                    <div class="card">
                        <div class="card-body">
                            <h3 class="card-title">
                                <%= item.streaming_platform %>
                            </h3>
                        </div>
                        <div class="card-footer">
                            <p class="card-text">
                                <a href="/streaming_platforms/<%= item.streaming_platform_id %>" class="card-link">
                                    view more
                                </a>
                            </p>
                        </div>
                    </div>
                </div>
            <% }) %>
       </div>
    </div>
</main>

<%- include('../partials/footer') %>