<%- include('../partials/header') %>

<main class="main" id="main">
    <div class="container">
        <h2>Actor</h2>
        <div class="row row-cols-1 row-cols-md-3 g-4">
            <% data.forEach(item => { %> 
        <!-- take each ** forEach ** actor and make a card to display the information -->
                <div class="col">
                    <!-- build card in here... -->
                    <div class="card">
                        <div class="card-body">
                            <h3 class="card-title">
                                <%= item.fName %> <%= item.lName %>
                            </h3>
                        </div>
                        <div class="card-footer">
                            <p class="card-text">
                                <a href="/actors/<%= item.actor_id %>" class="card-link">
                                    view more 
                                </a>
                            </p>
                        </div>
                    </div>
                </div>
            <% }) %>
       </div>
    </div>
</main>

<%- include('../partials/footer') %>